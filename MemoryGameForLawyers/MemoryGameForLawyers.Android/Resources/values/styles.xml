<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="MainTheme" parent="MainTheme.Base">
		<item name="android:windowDisablePreview">true</item>
	</style>
	<!-- Base theme applied no matter what API -->
	<style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="android:windowDisablePreview">true</item>
		<!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
		<item name="windowNoTitle">true</item>
		<!--We will be using the toolbar so no need to show ActionBar-->
		<item name="windowActionBar">false</item>
		<!-- Set theme colors from https://aka.ms/material-colors -->
		<!-- colorPrimary is used for the default action bar background -->
		<!-- colorPrimaryDark is used for the status bar -->
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="colorPrimary">#8B0000</item>
		<item name="colorPrimaryDark">#8B0000</item>
		<item name="colorAccent">#FF4081</item>
		<!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
		<item name="windowActionModeOverlay">true</item>

		<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
		<item name="textAllCaps">false</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowDisablePreview">true</item>
		<!--<item name="android:windowBackground">@drawable/splashScreenLayout</item>-->
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowActionBar">true</item>
	</style>
	<style name="Theme.MyTheme" parent="android:style/Theme.Holo">
		<!-- This disables the black preview screen -->
		<item name="android:windowDisablePreview">true</item>
	</style>
	<style name="MyTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:textAppearanceButton">@style/mybutton.text</item>
	</style>
	<style name="mybutton.text" parent="Base.TextAppearance.AppCompat.Button">
		<item name="textAllCaps">false</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="AppToolbarTheme" parent="Theme.AppCompat.NoActionBar">
		<item name="android:colorBackground">#FFFFFF</item>
		<item name="android:textColor">#0C9ABE</item>
	</style>

	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">#FF4081</item>
	</style>
</resources>
